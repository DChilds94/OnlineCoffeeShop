<div class="orders-left">
    <h1>Previous Orders</h1>
    #foreach ($order in $purchaseHistory)
    <table class="single-order">
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        #foreach ($purchase in $order.getPurchases())
        <tr>
            <td>$purchase.getName()</td>
            <td>$purchase.getQuantity()</td>
            <td>$purchase.getPrice()</td>
        </tr>
        #end
        <td>$order.calculateTotal()</td>
        #end
    </table>
</div>

<div class="orders-right">
    <h1>Hi, $user.getName(). This is Your account</h1>
</div>