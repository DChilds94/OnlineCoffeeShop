<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Online Coffee Shop</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav>
        <ul>
            <a href="/"><li class="home">
                HOME
            </li></a>
            <a href="/coffee"><li class="coffee">
                COFFEE
            </li></a>
            <a href="/equipment"><li class="equipment">
                EQUIPMENT
            </li></a>
            <li class="misc">
                <a href="/misc">MISC</a>
            </li>

            #if($user.getClass() == $customerClass)
            <a href="/account">
            <li class="endlink">
                MY ACCOUNT
            </li></a>

            #elseif($user.getClass() == $adminClass)
            <a href="/stock-management">
            <li class="endlink">
                STOCK MANAGEMENT
            </li></a>


            #else
            <a href="/login">
                <li class="endlink">
                    LOGIN
                </li></a>
            #end

            #if($user.getClass() == $customerClass)
            <li>
                <a href="/basket">MY BASKET</a>
            </li>
            #end
            #if ($user)
            <li>
                <a href="/logout">LOGOUT</a>
            </li>
            #end
        </ul>
    </nav>
    #parse($template)
</body>
</html>